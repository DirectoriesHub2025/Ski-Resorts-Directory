---
import MainLayout from '../layouts/MainLayout.astro';
import blogData from '../data/blog.json';

// Sort posts by date (newest first)
const sortedPosts = blogData.sort((a, b) => new Date(b.date) - new Date(a.date));
const featuredPosts = sortedPosts.filter(post => post.featured);
const regularPosts = sortedPosts.filter(post => !post.featured);
---

<MainLayout title="Ski Resort Blog - All Colorado Ski Resorts">
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-teal-600 to-teal-700 text-white py-12 sm:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-4">Ski Resort Blog</h1>
        <p class="text-base sm:text-lg md:text-xl lg:text-2xl opacity-90">Tips, guides, and insights for your Colorado ski adventure</p>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <!-- Featured Posts -->
      {featuredPosts.length > 0 && (
        <section class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">Featured Articles</h2>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6 lg:gap-8">
            {featuredPosts.map((post) => (
              <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <img 
                  src={post.image} 
                  alt={post.title}
                  class="w-full h-40 sm:h-48 object-cover"
                />
                <div class="p-4 sm:p-6">
                  <div class="flex items-center mb-3">
                    <span class="bg-teal-100 text-teal-800 text-xs sm:text-sm font-medium px-2 sm:px-3 py-1 rounded-full">
                      {post.category}
                    </span>
                    <span class="text-gray-500 text-xs sm:text-sm ml-2 sm:ml-3">{post.readTime}</span>
                  </div>
                  <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-3 hover:text-teal-600 transition-colors leading-tight">
                    {post.title}
                  </h3>
                  <p class="text-gray-600 mb-4 text-sm sm:text-base">{post.excerpt}</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <div class="w-6 h-6 sm:w-8 sm:h-8 bg-teal-100 rounded-full flex items-center justify-center mr-2 sm:mr-3">
                        <span class="text-teal-600 font-semibold text-xs sm:text-sm">
                          {post.author.split(' ').map(n => n[0]).join('')}
                        </span>
                      </div>
                      <div>
                        <p class="text-xs sm:text-sm font-medium text-gray-900">{post.author}</p>
                        <p class="text-xs sm:text-sm text-gray-500">{new Date(post.date).toLocaleDateString()}</p>
                      </div>
                    </div>
                    <a 
                      href={`/${post.slug}`}
                      class="text-teal-600 hover:text-teal-700 font-medium text-xs sm:text-sm"
                    >
                      Read More →
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- All Posts -->
      <section>
        <h2 class="text-3xl font-bold text-gray-900 mb-8">All Articles</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8">
          {regularPosts.map((post) => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-40 sm:h-48 object-cover"
              />
              <div class="p-4 sm:p-6">
                <div class="flex items-center mb-3">
                  <span class="bg-teal-100 text-teal-800 text-xs sm:text-sm font-medium px-2 sm:px-3 py-1 rounded-full">
                    {post.category}
                  </span>
                  <span class="text-gray-500 text-xs sm:text-sm ml-2 sm:ml-3">{post.readTime}</span>
                </div>
                <h3 class="text-base sm:text-lg font-bold text-gray-900 mb-3 hover:text-teal-600 transition-colors leading-tight">
                  {post.title}
                </h3>
                <p class="text-gray-600 mb-4 text-xs sm:text-sm">{post.excerpt}</p>
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="w-6 h-6 sm:w-8 sm:h-8 bg-teal-100 rounded-full flex items-center justify-center mr-2 sm:mr-3">
                      <span class="text-teal-600 font-semibold text-xs sm:text-sm">
                        {post.author.split(' ').map(n => n[0]).join('')}
                      </span>
                    </div>
                    <div>
                      <p class="text-xs sm:text-sm font-medium text-gray-900">{post.author}</p>
                      <p class="text-xs sm:text-sm text-gray-500">{new Date(post.date).toLocaleDateString()}</p>
                    </div>
                  </div>
                  <a 
                    href={`/${post.slug}`}
                    class="text-teal-600 hover:text-teal-700 font-medium text-xs sm:text-sm"
                  >
                    Read More →
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>

      <!-- Newsletter Signup -->
      <section class="mt-12 sm:mt-16 bg-gradient-to-r from-teal-600 to-teal-700 rounded-xl p-4 sm:p-6 lg:p-8 text-white text-center">
        <h3 class="text-xl sm:text-2xl font-bold mb-3 sm:mb-4">Stay Updated</h3>
        <p class="text-sm sm:text-base lg:text-lg mb-4 sm:mb-6 opacity-90">
          Get the latest ski resort news, conditions, and tips delivered to your inbox
        </p>
        <div class="max-w-md mx-auto flex flex-col sm:flex-row gap-3 sm:gap-4">
          <input 
            type="email" 
            placeholder="Enter your email"
            class="flex-1 px-3 sm:px-4 py-2.5 sm:py-3 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-white text-sm sm:text-base"
          />
          <button class="bg-white text-teal-600 px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors text-sm sm:text-base">
            Subscribe
          </button>
        </div>
      </section>
    </div>
  </div>
</MainLayout>
