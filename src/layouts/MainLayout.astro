---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Business Directory' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - All Colorado Ski Resorts</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="All Colorado Ski Resorts, Colorado ski resorts, ski directory, Colorado skiing, ski resorts directory" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="shortcut icon" href="/favicon.ico" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="skiresortsco.com" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>
  <body class="bg-gray-50">
    <!-- Header with Logo and Navigation -->
    <header class="bg-white shadow-lg border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between py-3 sm:py-4">
          <!-- Logo and Directory Name -->
          <div class="flex items-center space-x-2 sm:space-x-4 cursor-pointer" onclick="window.location.href='/'">
            <img src="/logo.png" alt="Logo" class="h-8 w-8 sm:h-10 sm:w-10 lg:h-12 lg:w-12 rounded-lg shadow-md" />
            <div class="hidden sm:block">
              <h1 class="text-lg sm:text-xl lg:text-2xl font-bold text-gray-900">All Colorado Ski Resorts</h1>
              <p class="text-xs sm:text-sm text-gray-600">Find your perfect Colorado ski adventure.  Compare resorts, read reviews, and plan your trip today!</p>
            </div>
            <div class="block sm:hidden">
              <h1 class="text-lg font-bold text-gray-900">Colorado Ski Resorts</h1>
            </div>
          </div>
          
          <!-- Main Menu Items -->
          <nav class="hidden md:flex items-center space-x-6 lg:space-x-8">
            <a href="/" class="text-gray-700 hover:text-teal-600 transition-colors font-medium">Home</a>
            <a href="/listings" class="text-gray-700 hover:text-teal-600 transition-colors font-medium">All Listings</a>
            <a href="/cities" class="text-gray-700 hover:text-teal-600 transition-colors font-medium">Cities</a>
            <a href="/blog" class="text-gray-700 hover:text-teal-600 transition-colors font-medium">Blog</a>
            <a href="/about" class="text-gray-700 hover:text-teal-600 transition-colors font-medium">About</a>
          </nav>
          
          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden p-2 rounded-md text-gray-700 hover:text-teal-600 hover:bg-gray-100 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 py-4">
          <nav class="flex flex-col space-y-3">
            <a href="/" class="text-gray-700 hover:text-teal-600 transition-colors font-medium py-2 px-3 rounded-md hover:bg-gray-50">Home</a>
            <a href="/listings" class="text-gray-700 hover:text-teal-600 transition-colors font-medium py-2 px-3 rounded-md hover:bg-gray-50">All Listings</a>
            <a href="/cities" class="text-gray-700 hover:text-teal-600 transition-colors font-medium py-2 px-3 rounded-md hover:bg-gray-50">Cities</a>
            <a href="/blog" class="text-gray-700 hover:text-teal-600 transition-colors font-medium py-2 px-3 rounded-md hover:bg-gray-50">Blog</a>
            <a href="/about" class="text-gray-700 hover:text-teal-600 transition-colors font-medium py-2 px-3 rounded-md hover:bg-gray-50">About</a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Footer with Horizontal Navigation -->
    <footer class="bg-gray-900 text-white py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="flex flex-col sm:flex-row flex-wrap justify-center items-center space-y-3 sm:space-y-0 sm:space-x-6 lg:space-x-8 text-sm">
          <a href="/" class="text-gray-300 hover:text-white transition-colors py-1">Home</a>
          <a href="/about" class="text-gray-300 hover:text-white transition-colors py-1">About Us</a>
          <a href="/privacy-policy" class="text-gray-300 hover:text-white transition-colors py-1">Privacy Policy</a>
          <a href="/disclaimer" class="text-gray-300 hover:text-white transition-colors py-1">Disclaimer</a>
          <a href="/terms-of-service" class="text-gray-300 hover:text-white transition-colors py-1">Terms of Service</a>
        </nav>
        <div class="mt-6 text-center">
          <p class="text-gray-400 text-xs sm:text-sm">Â© 2024 All Colorado Ski Resorts. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle functionality
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
            
            // Toggle hamburger icon
            const icon = mobileMenuButton.querySelector('svg');
            if (mobileMenu.classList.contains('hidden')) {
              icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
            } else {
              icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
            }
          });
        }
      });
    </script>
  </body>
</html>